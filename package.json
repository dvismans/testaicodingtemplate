{
  "name": "sauna-control",
  "version": "1.0.0",
  "description": "Sauna MCB control system with HTMX UI, SSE updates, MQTT sensors, and Tuya Cloud integration",
  "type": "module",
  "scripts": {
    "predev": "bun run verify",
    "dev": "bun run --watch src/index.ts",
    "prestart": "bun run verify",
    "start": "bun run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "verify": "bun run typecheck && bun run lint && bun run test",
    "precontainer:build": "bun run verify",
    "container:build": "podman compose build",
    "container:up": "podman compose up -d",
    "container:down": "podman compose down",
    "container:logs": "podman compose logs -f",
    "container:restart": "podman compose down && podman compose up -d --build",
    "deploy:init": "ssh homelab.local 'mkdir -p /home/davidvismans/apps && cd /home/davidvismans/apps && ([ -d sauna-control ] || git clone https://github.com/dvismans/testaicodingtemplate.git sauna-control)'",
    "deploy:env": "scp .env homelab.local:/home/davidvismans/apps/sauna-control/.env",
    "deploy:pull": "ssh homelab.local 'cd /home/davidvismans/apps/sauna-control && git pull'",
    "deploy:build": "ssh homelab.local 'cd /home/davidvismans/apps/sauna-control && ~/.local/bin/podman-compose build'",
    "deploy:up": "ssh homelab.local 'cd /home/davidvismans/apps/sauna-control && ~/.local/bin/podman-compose up -d'",
    "deploy:down": "ssh homelab.local 'cd /home/davidvismans/apps/sauna-control && ~/.local/bin/podman-compose down'",
    "deploy:logs": "ssh homelab.local 'cd /home/davidvismans/apps/sauna-control && ~/.local/bin/podman-compose logs -f'",
    "deploy": "bun run deploy:init && bun run deploy:env && bun run deploy:pull && bun run deploy:build && bun run deploy:up"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.14",
    "mqtt": "^5.14.1",
    "neverthrow": "^8.1.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "remeda": "^2.17.4",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
