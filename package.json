{
  "name": "sauna-control",
  "version": "1.0.0",
  "description": "Sauna MCB control system with HTMX UI, SSE updates, MQTT sensors, and Tuya Cloud integration",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "container:build": "podman compose build",
    "container:up": "podman compose up -d",
    "container:down": "podman compose down",
    "container:logs": "podman compose logs -f",
    "container:restart": "podman compose down && podman compose up -d --build"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.14",
    "mqtt": "^5.14.1",
    "neverthrow": "^8.1.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "remeda": "^2.17.4",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
